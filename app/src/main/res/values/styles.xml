<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <!--<item name="actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>-->
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <!--<style name="LowerCaseMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>-->

    <!-- Style for buttons in detail Activity-->
    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@drawable/button_selector</item>
        <!--The default Widget.Button style includes a minHeight property.
        Changing minHeight on the button will allow you to adjust padding around the
        text in the button-->
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="MediumWhiteTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--used by place name in MainActivity and expandable RecyclerView's label-->
    <style name="BigWhiteTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
